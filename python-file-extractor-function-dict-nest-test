import os


def get_file_info(path_input=os.getcwd()):
    # Initialize an empty list to store file information
    file_list = []
    #sub_file_dict = {}
    # path = directory path, dir = directory, files = file
    for path, dir, files in os.walk(path_input):
            
            if len(path) > len(path_input):
                  for file in files:
                        sub_file_dict = {
                            'path': os.path.join(path, file),
                            'name': file,
                            'size': os.path.getsize(os.path.join(path, file))
                        }
                        print(sub_file_dict)

            if len(path) == len(path_input):
            # Create a dictionary containing file path and name
                for file in files:
                        file_dict = {
                            'path': os.path.join(path, file),
                            'name': file,
                            'size': os.path.getsize(os.path.join(path, file)),
                            #'sub_files': sub_file_dict
                        }
                        # Add the dictionary to the file_list
                        file_list.append(file_dict)
            
                        #         print(path)
                            #sub_file_dict.append
                           

    # Print the list of dictionaries, each containing file information
    print(*file_list, sep='\n')
get_file_info()